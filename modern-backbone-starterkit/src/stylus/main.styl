@import 'normalize'

navbar-height = 50px

#js-app
  font-size 20px

.slick-next
  right 50px

.slick-prev
  left 50px

.slick-arrow
  z-index 1000

.slick-list
  margin-bottom 0
  height calc(100vh - 50px)

.rwc-specific-property-view
  display flex
  flex 1 1
  flex-direction column
  min-height 100vh

.rwc-specific-property-view-slider
  margin-top -20px; // offset bootstrap nav margin
  //height: 100vh;
  //display flex !important
  //flex 1 0
  //flex-direction column
  //box-sizing border-box

.rwc-specific-property-view-slider-slide
  //display flex !important
  //flex 1 0
  //flex-direction column
  background linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(/static/images/japan-skyline/japan-217878.jpg);

.rwc-specific-property-view-slider-slide
  height: 100vh !important;

// begin styles for hero view and sub elements
.rwcHeroView
  min-height 100vh
  background linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(/static/images/japan-skyline/japan-217878.jpg);
  background-size cover
  background-attachment center
  color white
  display flex
  flex 1 0
  flex-direction column

.rwc-hero-content
  display flex
  flex 1 0
  flex-direction column
  justify-content center

.rwc-home-view-hero-content-view
  display flex
  flex 1 0
  flex-direction column
  flex-direction column
  align-items center

.rwc-nav
  width: 100%
  padding-left 10px
  padding-right 10px
  background linear-gradient( rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8) ), url(/static/images/japan-skyline/japan-217878.jpg);
  background-size cover
  filter: saturate(300%)

.rwc-nav.mod-fixed
  position: fixed

.transform-hack
  transform translate3d(0, 0, 0); //makes nav clickable under the slick slider.

base-alpha = .15
hover-alpha = base-alpha + .1
slick-list-z-index = 1

.slick-list
  z-index slick-list-z-index

.rwc-nav-item-anchor
  z-index slick-list-z-index + 1

button.navbar-toggle .icon-bar
  background-color rgba(255, 255, 255, base-alpha + .1)

button.navbar-toggle:hover .icon-bar
  background-color rgba(255, 255, 255, hover-alpha + .1)


.navbar
  border-radius 0
  height navbar-height

.rwc-nav-logo-or-item, .rwc-nav-logo-or-item:visited
  color rgba(255, 255, 255, base-alpha)
  //text-shadow: 0px 0px .1px white;

.rwc-nav-item-anchor
  background transparent !important

.rwc-nav-logo-or-item:hover
  color rgba(255, 255, 255, hover-alpha)

.rwc-nav-logo-or-item:focus, .rwc-nav-logo-or-item:active
  color rgba(0, 0, 255, .1)
  outline none

.rwc-nav-logo-or-item:link, .rwc-nav-logo-or-item:visited, .rwc-nav-logo-or-item:hover, .rwc-nav-logo-or-item:active
  text-decoration none

