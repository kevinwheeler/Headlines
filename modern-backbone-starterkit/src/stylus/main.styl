@import 'normalize'

#js-app
  font-size 20px

// begin styles for hero view and sub elements
.rwcHeroView
  height 100vh
  background linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(/static/images/mathematics-989119.jpg);
  background-size cover
  color white
  display flex
  flex-direction column
  align-items center

.rwc-hero-spacing1
  flex-grow 1
  flex-shrink 1
  flex-basis 50px

.rwc-hero-spacing2
  flex-grow 1
  flex-shrink 1
  flex-basis 50px
  max-height 18px

.rwcNumWordsOrLetters
  width 50vw
  max-width 200px
  flex-grow 0
  flex-shrink 0
  flex-basis 40px

.rwc-hero-spacing3
  flex-grow 1
  flex-shrink 1
  flex-basis 50px
  max-height 18px

.rwc-hero-spacing4
  flex-grow 1
  flex-shrink 1
  flex-basis 50px
  max-height 18px

.rwc-hero-spacing5
  flex-grow 1
  flex-shrink 1
  flex-basis 50px
  max-height 18px

.rwc-hero-spacing6
  flex-grow 1
  flex-shrink 1
  flex-basis 50px
  max-height 18px

.rwc-hero-go
  flex-grow 0
  flex-shrink 0
  flex-basis calc(1em + 18px)

.rwc-hero-spacing7
  display none
  flex-grow 1
  flex-shrink 1
  flex-basis 50px

.rwc-error-message

.rwc-hero-spacing8
  flex-grow 1
  flex-shrink 1
  flex-basis 50px

.rwc-hero-view-form-control
  background rgba(255, 255, 255, .2) !important
  color: white !important
  width 50vw
  max-width 200px
  flex-grow 0
  flex-shrink 0
  flex-basis calc(1em + 18px)

.rwc-hero1-content
  text-align center;
  position absolute;
  top 50%;
  left 50%;
  transform translate(-50%, -50%);
  padding-bottom 5vh

.rwc-error-message
  margin-top: 5vh

.rwc-error-message-is-hidden
  display none

.rwc-error-message-is-visible
  display block

//end styles for hero view and sub elements

//begin styles for generatedTextView
.rwc-generated-text
  min-height 100vh
  background linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(/static/images/mathematics-989119.jpg);
  background-size cover
  color white
  position relative
  text-align center

.rwc-generated-text-container
  display inline-block
  width 80vw
  text-align left

.rwc-generated-text-label
  display block
  padding-top 10vh;
  padding-bottom 5vh;

.rwc-generated-text-text-area
  min-height 70vh
  background rgba(255, 255, 255, .2) !important
  color white !important
  resize none;
