# IMPORTANT: MAKE SURE TO DUPLICATE ALL CHANGES INTO THE OTHER .editorconfig FILE! Since this is a nested repo, the file exists in both repos and, for now at least, should be the same in both repos.

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*]
charset = utf-8

# 2 space indentation
[*]
indent_style = space
indent_size = 2
